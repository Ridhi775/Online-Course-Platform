    <script>
        // Theme toggle functionality
        const themeToggle = document.getElementById('theme-toggle');
        const themeIcon = document.getElementById('theme-icon');
        const themePath = document.getElementById('theme-path');
        
        // Check for saved theme preference or use system preference
        const prefersDarkScheme = window.matchMedia('(prefers-color-scheme: dark)');
        const currentTheme = localStorage.getItem('theme');
        
        if (currentTheme === 'dark' || (!currentTheme && prefersDarkScheme.matches)) {
            document.body.classList.add('dark');
            themePath.setAttribute('d', 'M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z');
        }
        
        themeToggle.addEventListener('click', () => {
            document.body.classList.toggle('dark');
            const isDark = document.body.classList.contains('dark');
            
            if (isDark) {
                themePath.setAttribute('d', 'M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z');
                localStorage.setItem('theme', 'dark');
            } else {
                themePath.setAttribute('d', 'M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z');
                localStorage.setItem('theme', 'light');
            }
        });
        
        // Tab navigation functionality
        const coursesTab = document.getElementById('courses-tab');
        const quizTab = document.getElementById('quiz-tab');
        const progressTab = document.getElementById('progress-tab');
        
        const coursesContent = document.getElementById('courses-content');
        const quizContent = document.getElementById('quiz-content');
        const progressContent = document.getElementById('progress-content');
        
        coursesTab.addEventListener('click', () => {
            coursesContent.classList.remove('hidden');
            quizContent.classList.add('hidden');
            progressContent.classList.add('hidden');
            
            coursesTab.classList.add('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
            quizTab.classList.remove('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
            progressTab.classList.remove('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
        });
        
        quizTab.addEventListener('click', () => {
            coursesContent.classList.add('hidden');
            quizContent.classList.remove('hidden');
            progressContent.classList.add('hidden');
            
            coursesTab.classList.remove('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
            quizTab.classList.add('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
            progressTab.classList.remove('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
        });
        
        progressTab.addEventListener('click', () => {
            coursesContent.classList.add('hidden');
            quizContent.classList.add('hidden');
            progressContent.classList.remove('hidden');
            
            coursesTab.classList.remove('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
            quizTab.classList.remove('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
            progressTab.classList.add('bg-indigo-100', 'dark:bg-gray-700', 'text-indigo-700', 'dark:text-white');
        });
        
        // Quiz functionality
        const quizCards = document.querySelectorAll('#quiz-content > div > div > div');
        quizCards.forEach(card => {
            const button = card.querySelector('button');
            button.addEventListener('click', () => {
                document.querySelector('#quiz-content > div:nth-child(2)').classList.add('hidden');
                document.getElementById('active-quiz').classList.remove('hidden');
            });
        });
        
        // Initialize course percentages
        setTimeout(() => {
            document.getElementById('overall-progress').style.strokeDashoffset = '40';
        }, 500);
    </script>
</body>
</html>
